{
  "web_interface": {
    "title": "LUKHAS ŒõiD Public Previewer",
    "description": "Interactive tool for previewing, validating, and learning about ŒõiD system",
    "version": "2.0.0",
    "base_url": "https://preview.lukhas.ai",
    "cdn_assets": "https://cdn.lukhas.ai/previewer/v2",
    "features": {
      "real_time_preview": true,
      "entropy_visualization": true,
      "tier_comparison": true,
      "format_guide": true,
      "educational_content": true,
      "demo_generation": true,
      "accessibility": true,
      "mobile_responsive": true,
      "dark_mode": true,
      "internationalization": false
    }
  },
  "api_configuration": {
    "base_path": "/api/public",
    "version": "v1",
    "rate_limiting": {
      "enabled": true,
      "default_limit": "100/hour",
      "endpoints": {
        "/preview": "100/hour",
        "/demo": "50/hour",
        "/tiers": "20/hour",
        "/formats": "20/hour",
        "/entropy/live": "200/hour"
      },
      "burst_limit": 10,
      "rate_limit_by": "ip_address",
      "rate_limit_headers": true
    },
    "cors": {
      "enabled": true,
      "allowed_origins": ["*"],
      "allowed_methods": ["GET", "POST", "OPTIONS"],
      "allowed_headers": ["Content-Type", "Authorization"],
      "max_age": 3600
    },
    "security": {
      "input_validation": true,
      "output_sanitization": true,
      "request_size_limit": "10KB",
      "timeout_seconds": 30,
      "ddos_protection": true
    }
  },
  "user_interface": {
    "layout": {
      "header": {
        "show_logo": true,
        "show_navigation": true,
        "show_theme_toggle": true
      },
      "main_sections": [
        {
          "id": "lambda_id_input",
          "title": "ŒõiD Preview & Analysis",
          "description": "Enter a ŒõiD to see detailed analysis, validation, and suggestions",
          "features": ["real_time_validation", "entropy_analysis", "format_detection"]
        },
        {
          "id": "tier_explorer",
          "title": "Tier Explorer",
          "description": "Compare different ŒõiD tiers and their capabilities",
          "features": ["tier_comparison", "feature_matrix", "upgrade_paths"]
        },
        {
          "id": "format_guide",
          "title": "Format Specifications",
          "description": "Learn about ŒõiD format rules and components",
          "features": ["format_examples", "validation_rules", "component_breakdown"]
        },
        {
          "id": "demo_generator",
          "title": "Demo Generator",
          "description": "Generate example ŒõiDs for learning and testing",
          "features": ["tier_demos", "commercial_demos", "custom_generation"]
        },
        {
          "id": "entropy_analyzer",
          "title": "Entropy Analyzer",
          "description": "Understand entropy calculation and optimization",
          "features": ["live_analysis", "optimization_tips", "boost_factors"]
        },
        {
          "id": "educational_content",
          "title": "Learn About ŒõiD",
          "description": "Comprehensive guides and tutorials",
          "features": ["getting_started", "advanced_topics", "best_practices"]
        }
      ],
      "footer": {
        "show_links": true,
        "show_api_info": true,
        "show_contact": true
      }
    },
    "styling": {
      "theme": {
        "primary_color": "#1e3a8a",
        "secondary_color": "#3b82f6",
        "accent_color": "#10b981",
        "background_light": "#ffffff",
        "background_dark": "#0f172a",
        "text_light": "#1f2937",
        "text_dark": "#f1f5f9",
        "border_color": "#e5e7eb",
        "error_color": "#ef4444",
        "warning_color": "#f59e0b",
        "success_color": "#10b981"
      },
      "fonts": {
        "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "monospace": "'JetBrains Mono', 'Fira Code', Consolas, 'Liberation Mono', Monaco, monospace"
      },
      "spacing": {
        "base_unit": "0.25rem",
        "container_max_width": "1200px",
        "section_spacing": "2rem",
        "component_spacing": "1rem"
      }
    },
    "animations": {
      "enabled": true,
      "duration": "200ms",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
      "reduce_motion_support": true
    },
    "accessibility": {
      "aria_labels": true,
      "keyboard_navigation": true,
      "screen_reader_support": true,
      "focus_indicators": true,
      "color_contrast_compliance": "WCAG AA",
      "font_size_scaling": true
    }
  },
  "interactive_features": {
    "lambda_id_input": {
      "placeholder": "Enter a ŒõiD (e.g., Œõ2-A1B2-üîÆ-C3D4)",
      "validation": {
        "real_time": true,
        "debounce_ms": 300,
        "show_format_hints": true,
        "highlight_errors": true
      },
      "autocomplete": {
        "enabled": true,
        "suggestions": ["demo_ids", "format_templates"],
        "max_suggestions": 5
      }
    },
    "entropy_visualization": {
      "type": "progress_bar",
      "show_score": true,
      "color_coding": true,
      "breakdown": true,
      "real_time_updates": true,
      "boost_factor_display": true
    },
    "tier_comparison": {
      "display_type": "interactive_table",
      "features": ["sorting", "filtering", "expansion"],
      "highlight_differences": true,
      "upgrade_simulation": true
    },
    "demo_generation": {
      "tier_selector": {
        "type": "slider",
        "range": [0, 5],
        "default": 2,
        "show_tier_names": true
      },
      "format_selector": {
        "type": "radio_buttons",
        "options": ["standard", "commercial"],
        "default": "standard"
      },
      "instant_generation": true,
      "copy_to_clipboard": true
    }
  },
