{
  "openai_api_key": "YOUR_OPENAI_API_KEY_HERE",
  "documentation_settings": {
    "model": "gpt-4o-mini",
    "max_tokens": 2000,
    "temperature": 0.7,
    "backup_enabled": true,
    "backup_directory": "docs/backups",
    "supported_extensions": [".py", ".md", ".txt", ".rst"],
    "exclude_patterns": ["__pycache__", ".git", "node_modules", ".venv", "benchmarks/results"]
