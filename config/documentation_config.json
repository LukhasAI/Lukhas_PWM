  "project_settings": {
    "project_name": "LUKHAS AI",
    "copyright_year": "2025",
    "default_authors": "LUKHAS AI Development Team",
    "default_version": "1.0.0"
  },
  "processing_settings": {
    "batch_size": 5,
    "api_delay_seconds": 1,
    "max_retries": 3,
    "cost_limit_usd": 10.0
  }
}