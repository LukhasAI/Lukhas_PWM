#!/bin/bash
# PWM File Organization Pre-commit Hook
# Ensures files are created in proper directories

echo "üõ°Ô∏è PWM File Organization Check..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if we have issues
ISSUES_FOUND=0

# Check for PWM analysis files in root
PWM_FILES_IN_ROOT=$(git status --porcelain | grep '^A.*PWM_.*\.py$' | grep -v 'tools/analysis/' || true)
if [ ! -z "$PWM_FILES_IN_ROOT" ]; then
    echo -e "${RED}‚ùå PWM analysis files found in root directory:${NC}"
    echo "$PWM_FILES_IN_ROOT"
    echo -e "${YELLOW}‚Üí These should be in tools/analysis/${NC}"
    ISSUES_FOUND=1
fi

# Check for test files in root
TEST_FILES_IN_ROOT=$(git status --porcelain | grep '^A.*test_.*\.py$' | grep -v 'tests/' || true)
if [ ! -z "$TEST_FILES_IN_ROOT" ]; then
    echo -e "${RED}‚ùå Test files found in root directory:${NC}"
    echo "$TEST_FILES_IN_ROOT"
    echo -e "${YELLOW}‚Üí These should be in tests/ with appropriate subdirectory${NC}"
    ISSUES_FOUND=1
fi

# Check for report files in root
REPORT_FILES_IN_ROOT=$(git status --porcelain | grep -E '^A.*(PWM_.*_REPORT\.(md|json)|.*_STATUS_REPORT\.md)$' | grep -v 'docs/reports/' || true)
if [ ! -z "$REPORT_FILES_IN_ROOT" ]; then
    echo -e "${RED}‚ùå Report files found in root directory:${NC}"
    echo "$REPORT_FILES_IN_ROOT"
    echo -e "${YELLOW}‚Üí These should be in docs/reports/status/ or docs/reports/analysis/${NC}"
    ISSUES_FOUND=1
fi

# Check for planning documents in root
PLAN_FILES_IN_ROOT=$(git status --porcelain | grep -E '^A.*PWM_.*_PLAN\.md$' | grep -v 'docs/planning/' || true)
if [ ! -z "$PLAN_FILES_IN_ROOT" ]; then
    echo -e "${RED}‚ùå Planning documents found in root directory:${NC}"
    echo "$PLAN_FILES_IN_ROOT"
    echo -e "${YELLOW}‚Üí These should be in docs/planning/completed/${NC}"
    ISSUES_FOUND=1
fi

if [ $ISSUES_FOUND -eq 0 ]; then
    echo -e "${GREEN}‚úÖ All files are properly organized!${NC}"
    exit 0
else
    echo -e "\n${RED}File organization issues detected!${NC}"
    echo -e "${YELLOW}Please move files to their proper directories:${NC}"
    echo ""
    echo "  üìÅ Analysis tools (PWM_*.py) ‚Üí tools/analysis/"
    echo "  üìÅ Test files (test_*.py) ‚Üí tests/<subdirectory>/"
    echo "  üìÅ Status reports (*_STATUS_REPORT.md) ‚Üí docs/reports/status/"
    echo "  üìÅ Analysis reports (*_REPORT.json) ‚Üí docs/reports/analysis/"
    echo "  üìÅ Planning docs (PWM_*_PLAN.md) ‚Üí docs/planning/completed/"
    echo ""
    echo "See CLAUDE.md for complete file organization guidelines."
    echo ""
    echo "To bypass this check (not recommended):"
    echo "  git commit --no-verify"
    exit 1
fi